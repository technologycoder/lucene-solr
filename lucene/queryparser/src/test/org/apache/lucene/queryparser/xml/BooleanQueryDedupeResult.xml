<BooleanQuery disableCoord="true">
    <!-- Q1: news* in headline or body fields -->
    <Clause occurs="must">
        <DisjunctionMaxQuery>
            <GenericTextQuery wnq="true" fieldName="headline">news*</GenericTextQuery>
            <GenericTextQuery wnq="true" fieldName="body">news*</GenericTextQuery>
        </DisjunctionMaxQuery>
    </Clause>
    <!-- Q2: brexit in headline or body fields. content is different and this shouldn't get deduped.-->
    <Clause occurs="must">
        <DisjunctionMaxQuery>
            <GenericTextQuery wnq="true" fieldName="headline">brexit</GenericTextQuery>
            <GenericTextQuery wnq="true" fieldName="body">brexit</GenericTextQuery>
        </DisjunctionMaxQuery>
    </Clause>
    <!-- Q3: news* in headline: just one field search and a should clause -->
    <Clause occurs="should">
        <GenericTextQuery wnq="true" fieldName="headline">news*</GenericTextQuery>
    </Clause>
    <!-- Q4: non repeating case-->
    <Clause occurs="must">
        <GenericTextQuery wnq="true" fieldName="body">bloomberg</GenericTextQuery>
    </Clause>
    <!--Q5 wildcard phrase query "finance melt*" and mustnot case-->
    <Clause occurs="mustnot">
        <GenericTextQuery wnq="true" fieldName="headline">finance melt*</GenericTextQuery>
    </Clause>
    <!--Q6: resultant form of 'barack Near/4 (obama and obama)' and 'barack Near/4 obama'-->
    <Clause occurs="must">
        <NearQuery fieldName="body" slop="4" inOrder="false">
            <WildcardNearQuery>barack</WildcardNearQuery>
            <WildcardNearQuery>obama</WildcardNearQuery>
        </NearQuery>
    </Clause>
    <!--Q7: OrderedNearQuery -->
    <Clause occurs="must">
        <NearQuery fieldName="headline" slop="4" inOrder="true">
            <WildcardNearQuery>obama</WildcardNearQuery>
            <WildcardNearQuery>uk</WildcardNearQuery>
        </NearQuery>
    </Clause>
</BooleanQuery>
